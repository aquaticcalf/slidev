{
  "type": "module",
  "version": "52.11.0",
  "private": true,
  "bin": {
    "slidev": "./packages/slidev/bin/slidev.mjs"
  },
  "packageManager": "bun@1.2.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*",
    "demo/*",
    "cypress/fixtures/*"
  ],
  "scripts": {
    "build": "bun run --filter=\"./packages/**\" build",
    "cy": "cypress open",
    "cy:fixture": "bun --cwd cypress/fixtures/basic dev",
    "demo:composable-vue": "bun --cwd demo/composable-vue dev",
    "demo:vue-runner": "bun --cwd demo/vue-runner dev",
    "demo:dev": "bun --cwd demo/starter dev",
    "vscode:dev": "bun --cwd packages/vscode dev",
    "play": "bun demo:dev",
    "dev": "bun run --filter=\"./packages/**\" dev",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp package.json packages/*/package.json --all",
    "test": "vitest test",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/ni": "^28.0.0",
    "@antfu/utils": "^9.3.0",
    "@biomejs/biome": "^2.3.10",
    "@shikijs/markdown-it": "^3.19.0",
    "@slidev/cli": "workspace:*",
    "@slidev/parser": "workspace:*",
    "@slidev/types": "workspace:*",
    "@types/cli-progress": "^3.11.6",
    "@types/connect": "^3.4.38",
    "@types/file-saver": "^2.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.2",
    "@types/prompts": "^2.4.9",
    "@types/recordrtc": "^5.6.15",
    "@types/resolve": "^1.20.6",
    "@types/semver": "^7.7.1",
    "@types/yargs": "^17.0.35",
    "@vueuse/core": "^14.1.0",
    "bumpp": "^10.3.2",
    "cypress": "^14.5.4",
    "katex": "^0.16.27",
    "lint-staged": "^16.2.7",
    "mermaid": "^11.12.2",
    "playwright-chromium": "^1.57.0",
    "rimraf": "^6.1.2",
    "shiki": "^3.19.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "tinyexec": "^1.0.2",
    "tsdown": "^0.17.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.8",
    "zx": "^8.8.5"
  },
  "resolutions": {
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,json}": [
      "biome check --write"
    ]
  }
}
